[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 120

[*.json]
indent_size = 2

[{*.xml,*.html}]
indent_size = 2
max_line_length = off

[{*.yaml,*.yml}]
indent_size = 2

[*.properties]
keep_blank_lines = true
ij_properties_keep_blank_lines = true
